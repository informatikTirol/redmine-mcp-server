{
  "name": "@informatik_tirol/redmine-mcp-server",
  "version": "1.3.0",
  "description": "MCP server for Redmine",
  "type": "module",
  "bin": {
    "redmine-mcp-server": "./dist/server.mjs"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "gen": "rm -rf src/__generated__ && orval && node post-generate.js",
    "build": "pnpm gen && tsdown",
    "prepublishOnly": "pnpm run build",
    "dev": "pnpm gen && tsx watch src/server.ts",
    "dev:nowatch": "pnpm gen && tsx src/server.ts",
    "debug": "pnpm gen && tsx --inspect src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/informatikTirol/redmine-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "redmine"
  ],
  "author": "informatik_tirol",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/informatikTirol/redmine-mcp-server/issues"
  },
  "homepage": "https://github.com/informatikTirol/redmine-mcp-server#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "orval": "^7.10.0",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.15.0",
    "zod": "^3.25.75"
  }
}
