# Redmine MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your Redmine instance URL
REDMINE_URL=https://your-redmine-instance.com

# Required: Your Redmine API key
# Get it from: Redmine > My Account > API access key
REDMINE_API_KEY=your_api_key_here

# Optional: Enable read-only mode (disables all write operations)
# Set to "true" to enable, leave empty or set to "false" to disable
REDMINE_MCP_READ_ONLY=false

# Optional: Node environment (automatically set in production builds)
# NODE_ENV=development
